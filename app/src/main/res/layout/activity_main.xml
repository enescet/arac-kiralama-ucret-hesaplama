<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Araç Kiralama Ücret Hesaplama"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kiralama Gün Sayısı" />

        <EditText
            android:id="@+id/etDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Örn: 3"
            android:inputType="number"
            android:padding="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Araç Sınıfı"
            android:paddingTop="12dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rgCarClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbEco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eco (Günlük 300₺)" />

            <RadioButton
                android:id="@+id/rbVip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIP (Günlük 450₺)" />

            <RadioButton
                android:id="@+id/rbSuv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUV (Günlük 550₺)" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vites Türü"
            android:paddingTop="12dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rgTransmission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbManual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manuel (+0₺)" />

            <RadioButton
                android:id="@+id/rbAutomatic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Otomatik (+50₺ / gün)" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ek Hizmetler"
            android:paddingTop="12dp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cbDriver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Şoför (+200₺ / gün)" />

        <CheckBox
            android:id="@+id/cbInsurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sigorta (+80₺ / gün)" />

        <CheckBox
            android:id="@+id/cbGps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPS (+30₺ / gün)" />

        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hesapla"
            android:padding="12dp"
            android:layout_marginTop="14dp" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sonuç burada görünecek"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingTop="14dp" />

    </LinearLayout>
</ScrollView>
